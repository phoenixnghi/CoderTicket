<h1 class="page_title">Log in</h1>

<div class="card card-block text-xs-center input_form">
  <%= form_tag sessions_path, method: 'post' do %>
      <div class="form-group">
        <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Email', autofocus: true %>
      </div>
      <div class="form-group">
        <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
      </div>
      <%= submit_tag 'Log in', class: 'btn btn-primary-outline' %>
      <br>OR<br>
      <%= link_to 'Log in with Facebook', '/auth/facebook', class: 'btn btn-primary' %>
  <% end %>
</div>